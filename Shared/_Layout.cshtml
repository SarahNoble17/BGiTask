@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BGiGitHubApp</title>
    <link rel="icon" type="image/x-icon" href="~/images/GitHub.svg" />

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>

<body>
    <div id="sidebar">
        @RenderSection("LeftNav", false)
    </div>

    <div id="wrapper">

        @await Html.PartialAsync("Nav")

        <div class="container body-content">
            <h2 class="title-reports"><span class="glyphicon @ViewData["PageIcon"]" style="margin-right:10px"></span>@ViewData["Title"]</h2>
            <hr />
            <div class="row content">
                <div>
                    @RenderBody()
                </div>
            </div>
            <div>

            </div>
        </div>

    </div>

    <script src="~/js/site.js"></script>

    @RenderSection("scripts", required: false)

</body>

</html>
