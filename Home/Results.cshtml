@using BGiGitHubApp.Models
@model BGiGitHubApp.Models.Data.Users

@{
    ViewBag.Title = "GitHub User Info for: " + Model.Login;
    ViewData["PageIcon"] = "glyphicon-user";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section LeftNav {

    <br />
    <div class="col-md-2">
        <form id="ControlForm" asp-action="Results">
            <div class="form-group">

                <label class="control-label">Search UserName:</label>
                <div>
                    <input name="Id" asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <button type="submit" asp-route="" class="btn btn-info btn-block">
                    <span class="glyphicon glyphicon-search"></span> Search
                </button>
            </div>
            <hr />
        </form>
        <div class="text-center">
            <span class="text-danger">@Html.ValidationMessage("UserMessage")</span>
        </div>
    </div>
}
<br />
<ul class="nav nav-tabs">
    <li class="nav-item">
        <a asp-action="Index" class="nav-link">Search</a>
    </li>
    <li class="nav-item active">
        <a class="nav-link" href="#">Results</a>
    </li>
</ul>

<div class="row">
    <div class="col-md-12">
        <br />
        <div>
            <table class="table table-striped table-responsive" style="width:100%">
                <thead align="center">
                    <tr>
                        <th>
                            Id:
                        </th>
                        <th>
                            UserName:
                        </th>
                        <th>
                            Location:
                        </th>
                        <th>
                            Repos URL:
                        </th>
                        <th>
                            Avatar URL:
                        </th>
                    </tr>
                </thead>
                <tbody id="myTable">
                    <tr>
                        <td>
                            @Model.Id
                        </td>
                        <td>
                            @Model.Login
                        </td>
                        <td>
                            @Model.Location
                        </td>
                        <td>
                            @Model.Repos_url
                        </td>
                        <td>
                            <img src="@Model.Avatar_url" />
                        </td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
</div>